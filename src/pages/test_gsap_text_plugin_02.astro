    .grid-container {
      display: grid;
      width: 100%; /* Sets the grid container width to full viewport width */
      grid-template-columns: 2fr 1fr; /* Creates two columns of equal width */
      position: relative;
    }
    .grid-item {
      border: 1px solid black; /* Adds a border for visual separation */
      padding: 0px; /* Adds some padding inside grid items */
    }
    .home-column-media {
      grid-column: 1/span 2;
      grid-row: 1;
      height: 1200px;
      position: sticky;
      top: 0;
      /* transition: width 1.4s cubic-bezier(.4,0,.2,1); */
      width: 100%;
      background-color: var(--black);
      color: var(--white);
      display: flex;
      flex-direction: column;
      /* justify-content: center; */
      overflow: hidden;
      text-transform: none;
    }
    .home-column-content {
      grid-area: 1/2;
      overflow: hidden;
      padding-top: var(--header-height);
      background: var(--white);
      position: relative;
      height: 2000px;
      text-transform: none;
      
    }
    #backgroundVideo {
      display: flex;
      justify-content: center;
      align-items: center;
      margin: 0;
      overflow: hidden; /* Ensures the video doesn't overflow the container */
      position: fixed; /* For positioning the video absolutely within */
      border-radius: 15px; /* Rounded corners */
      opacity: 20;
    }
    video {
      width: 50%; /* Make video width equal to container width */
      height: auto; /* Maintain aspect ratio */
    }
