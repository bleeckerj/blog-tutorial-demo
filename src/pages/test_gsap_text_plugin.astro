    height: 100%;
    background-color: rgb(248 250 252);
    /* white-space: nowrap;
    overflow-wrap: break-word;
    word-wrap: break-word; */
  }
  
  .right-column {
    width: 50%; /* or remaining width */
    margin-left: 50%; /* Adjust based on left column width */
    overflow-y: auto;
    height: 100%;
  }
  
</style>
