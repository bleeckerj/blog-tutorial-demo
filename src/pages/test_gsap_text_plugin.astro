---
import BaseLayout from '../layouts/BaseLayout.astro';
---
<script>
  // Client-side JavaScript here
  import { gsap } from 'gsap';
  import { TextPlugin } from 'gsap/TextPlugin';
  console.log(gsap);
  
  gsap.registerPlugin(TextPlugin);
  
  gsap.defaults({ease: "none"});
  
  const tl = gsap.timeline({yoyo:false});
  tl.to(".ig", {duration: 0.5, text:"unlocks"}, "+=1")
  .to(".gt", {duration: 0.75, delay: 1, text:"Beauty"})
  .to(".gt", {duration: 1, delay: 1.5, text:"Possibility"})
  .to(".gt", {duration: 1, delay: 1.5, text:"Futures"})
  .to(".gt", {duration: 1, delay: 1, text:"The 'Not True *Yet'"})
  .to(".gt", {duration: 0.75, delay: 1.5, text:"Greatness"})
  .to(".ig", { height: 0, opacity: 0, delay: 3, text: "", duration: 0.2 })
  .to(".st", {height:0, duration:0.2}, "-=0.2").to(".st", {opacity: 0, duration: 0.5}, "-=0.5")
  .to(".gt", {duration: 3, delay: 0.2, text:"Imagination Is The Engine of Innovation."})
  .to(".gt", {duration: 0, delay: 2, text: ""})
  .to(".gt", {duration: 3, delay: 0.1, text:"Imagination Is Your Advantage."})
  
  // .to(".gt", {duration: 1, delay: 3, text:"It Ignites Evolutionary Change"})
  .to(".ih", {duration: 1.75, delay: 2, text:"It's Time For You To<br/>"} )
  .to(".t2", {duration: 1.25, text:"Imagine Harder."})
</script>
